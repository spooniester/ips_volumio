{
	"elements":
	[
    { "name": "IPAddress", "type": "ValidationTextBox", "caption": "IP-Address" },
    { "name": "UpdateInterval", "type": "IntervalBox", "caption": "Sekunden" }
        ],
	"actions":
	[
		{ "type": "Button", "label": "Play", "onClick": "Volumio_Play($id);" },
		{ "type": "Button", "label": "Stop", "onClick": "Volumio_Stop($id);" },
		{ "type": "Button", "label": "Pause", "onClick": "Volumio_Pause($id);" },
		{ "type": "Button", "label": "Next", "onClick": "Volumio_Next($id);" },
		{ "type": "Button", "label": "Status", "onClick": "Volumio_GetStatus($id);" },
    	{ "type": "HorizontalSlider", "name": "Volume", "minimum": 0, "maximum": 25, "onChange": "Volumio_SetVolume($id, $lautst);" }
	]	
}
